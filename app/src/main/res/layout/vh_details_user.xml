<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgView_vh_details_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_vh_details_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgView_vh_details_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_vh_details_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="No description"
        app:layout_constraintEnd_toEndOf="@+id/tv_vh_details_name"
        app:layout_constraintStart_toStartOf="@+id/tv_vh_details_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_vh_details_name" />

    <TextView
        android:id="@+id/tv_vh_details_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="No email found"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_vh_details_name"
        app:layout_constraintStart_toStartOf="@+id/tv_vh_details_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_vh_details_desc" />

</android.support.constraint.ConstraintLayout>
